<Defs>
    <!--Haunt Defs Begin-->
    <!--Frog Def-->
    <HediffDef>
        <defName>Taggerung_FrogHaunt</defName>
        <label>Haunted by Frog</label>
        <description>Where is Frog? Why, she never left.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.1,0.2,0.8)</defaultLabelColor>
        <maxSeverity>1.0</maxSeverity>
        <scenarioCanAdd>true</scenarioCanAdd>
        <isBad>false</isBad>
        <stages>
            <li>
                <minSeverity>0</minSeverity>
                <label>presence</label>
                <statFactors>
                    <RestFallRateFactor>0.8</RestFallRateFactor>
                    <NegotiationAbility>1.2</NegotiationAbility>
                    <WorkSpeedGlobal>0.9</WorkSpeedGlobal>
                </statFactors>
            </li>
        </stages>
        <comps>
            <li Class="AthenaFramework.HediffCompProperties_Renderable">
                <additionalGraphics>
                    <li Class="AthenaFramework.HediffGraphicPackage">
                        <graphicData>
                            <texPath>Haunts/Frog/Frog</texPath>
                            <graphicClass>Graphic_Multi</graphicClass>
                            <drawSize>1.7</drawSize>
                            <shaderType>MoteGlow</shaderType>
                        </graphicData>
                        <offsets>
                            <li>(0.3, 1.6, -0.55)</li> <!-- North -->
                            <li>(-0.5, 1.1, -0.35)</li> <!-- East -->
                            <li>(0.3, -1.6, 0.65)</li> <!-- South -->
                            <li>(0.5, 1.1, -0.35)</li> <!-- West -->
                        </offsets>
                        <onlyRenderWhenDrafted>true</onlyRenderWhenDrafted>
                    </li>
                </additionalGraphics>
            </li>
        </comps>
    </HediffDef>
