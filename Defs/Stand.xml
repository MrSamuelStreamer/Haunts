<?xml version="1.0" encoding="utf-8"?>

<Defs>
    <HediffDef>
        <defName>Taggerung_FrogHaunt</defName>
        <label>Haunted by Frog</label>
        <description>Where is Frog? Why, she never left.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <defaultLabelColor>(0.1,0.2,0.8)</defaultLabelColor>
        <maxSeverity>1.0</maxSeverity>
        <scenarioCanAdd>true</scenarioCanAdd>
        <isBad>false</isBad>
        <stages>
            <li>
                <minSeverity>0</minSeverity>
                <label>presence</label>
            </li>
        </stages>
        <comps>
            <li Class="AthenaFramework.HediffCompProperties_Renderable">
                <attachedMoteDef>Mote_SanguophageMeetingSmoke</attachedMoteDef>
                <graphicData>
                    <texPath>Haunts/Frog/Frog</texPath>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawOffsetSouth>(0.3, 1.0, 1.35)</drawOffsetSouth>
                    <drawOffsetNorth>(0.3, -0.6, -0.85)</drawOffsetNorth>
                    <drawOffsetEast>(-1.3, -0.1, -0.35)</drawOffsetEast>
                    <drawOffsetWest>(1.7, 0.1, -0.35)</drawOffsetWest>
                    <drawSize>1.6</drawSize>
                    <shaderType>MoteGlowDistortBackground</shaderType>
                    <shaderParameters>
                        <_DistortionTex>/Things/Mote/PsycastDistortionMask</_DistortionTex>
                    </shaderParameters>
                </graphicData>
                <onlyRenderWhenDrafted>true</onlyRenderWhenDrafted>
            </li>
        </comps>
    </HediffDef>

    <AbilityGroupDef>
        <defName>Taggerung_Stand</defName>
        <cooldownTicks>180</cooldownTicks>
        <ritualRoleIds />
    </AbilityGroupDef>

    <AbilityDef ParentName="PsycastBase">
        <defName>Taggerung_ShowStand</defName>
        <label>show stand</label>
        <description>Focus on the inner spirit travelling with you.</description>
        <iconPath>UI/Abilities/BerserkTrance</iconPath>
        <jobDef>CastAbilityOnThing</jobDef>
        <targetRequired>False</targetRequired>
        <canUseAoeToGetTargets>False</canUseAoeToGetTargets>
        <stunTargetWhileCasting>True</stunTargetWhileCasting>
        <showPsycastEffects>False</showPsycastEffects>
        <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
        <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
        <groupDef>Taggerung_Stand</groupDef>
        <warmupStartSound>CombatCommand_Warmup</warmupStartSound>
        <statBases>
            <Ability_EffectRadius>0</Ability_EffectRadius>
            <Ability_EntropyGain>0</Ability_EntropyGain>
            <Ability_PsyfocusCost>0.0</Ability_PsyfocusCost>
            <Ability_Duration>120</Ability_Duration>
        </statBases>
        <level>1</level>
        <hostile>false</hostile>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <warmupTime>0.5</warmupTime>
            <drawAimPie>False</drawAimPie>
            <requireLineOfSight>False</requireLineOfSight>
            <targetParams>
                <canTargetSelf>true</canTargetSelf>
                <canTargetPawns>false</canTargetPawns>
                <canTargetBuildings>false</canTargetBuildings>
                <canTargetAnimals>false</canTargetAnimals>
                <canTargetHumans>false</canTargetHumans>
                <canTargetMechs>false</canTargetMechs>
            </targetParams>
            <range>0</range>
        </verbProperties>

        <warmupMoteSocialSymbol>UI/Abilities/BerserkTrance</warmupMoteSocialSymbol>
        <comps>
            <li Class = "CompProperties_AbilityGiveHediff">
                <compClass>CompAbilityEffect_GiveHediff</compClass>
                <hediffDef>Taggerung_FrogHaunt</hediffDef>
                <psychic>True</psychic>
                <applicableToMechs>False</applicableToMechs>
                <applyToSelf>true</applyToSelf>
                <replaceExisting>true</replaceExisting>
            </li>
        </comps>
    </AbilityDef>

    <AbilityDef ParentName="PsycastBase">
        <defName>Taggerung_HideStand</defName>
        <label>hide stand</label>
        <description>Allow the inner spirit travelling with you to fade into your unconscious.</description>
        <iconPath>UI/Abilities/BerserkTrance</iconPath>
        <jobDef>CastAbilityOnThing</jobDef>
        <targetRequired>False</targetRequired>
        <canUseAoeToGetTargets>False</canUseAoeToGetTargets>
        <stunTargetWhileCasting>True</stunTargetWhileCasting>
        <showPsycastEffects>False</showPsycastEffects>
        <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
        <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
        <groupDef>Taggerung_Stand</groupDef>
        <warmupStartSound>CombatCommand_Warmup</warmupStartSound>
        <statBases>
            <Ability_EffectRadius>0</Ability_EffectRadius>
            <Ability_EntropyGain>0</Ability_EntropyGain>
            <Ability_PsyfocusCost>0.0</Ability_PsyfocusCost>
            <Ability_Duration>120</Ability_Duration>
        </statBases>
        <level>1</level>
        <hostile>false</hostile>
        <verbProperties>
            <verbClass>Verb_CastAbility</verbClass>
            <warmupTime>0.5</warmupTime>
            <drawAimPie>False</drawAimPie>
            <requireLineOfSight>False</requireLineOfSight>
            <targetParams>
                <canTargetSelf>true</canTargetSelf>
                <canTargetPawns>false</canTargetPawns>
                <canTargetBuildings>false</canTargetBuildings>
                <canTargetAnimals>false</canTargetAnimals>
                <canTargetHumans>false</canTargetHumans>
                <canTargetMechs>false</canTargetMechs>
            </targetParams>
            <range>0</range>
        </verbProperties>

        <warmupMoteSocialSymbol>UI/Abilities/BerserkTrance</warmupMoteSocialSymbol>
        <comps>
            <li Class = "CompProperties_AbilityRemoveHediff">
                <compClass>CompAbilityEffect_RemoveHediff</compClass>
                <hediffDef>Taggerung_FrogHaunt</hediffDef>
                <applyToSelf>true</applyToSelf>
                <applyToTarget>false</applyToTarget>
            </li>
        </comps>
    </AbilityDef>
</Defs>
